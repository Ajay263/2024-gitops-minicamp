{
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "black-formatter.args": ["--line-length", "79","--config ${workspaceFoder}/.black.toml"],

    "editor.rulers": [
        {
            "color": "#e40707",
            "column": 99
        }
    ],
    "workbench.colorTheme": "Night Owl",
    "workbench.editorAssociations": {
        "{git,gitlens,conflictResolution,vscode-local-history}:/**/*.tc.json": "default",
        "*.copilotmd": "vscode.markdown.preview.editor",
        "{git,gitlens,git-graph}:/**/*.{md,csv,svg}": "default"
    },
    "black-formatter.showNotifications": "always",
    "black-formatter.importStrategy": "fromEnvironment",
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.languageServer": "Pylance",
    "python.envFile": "${workspaceFolder}/.venv",
    "python.globalModuleInstallation": true,
    "pylint.enabled": true,
    "pylint.args": ["--import-error"],
    "flake8.enabled": true,
    "flake8.args": ["--ignore=E501"],
    "[python]": {
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
},


}
